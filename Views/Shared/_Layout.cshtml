<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert.min.js"></script>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://use.fontawesome.com/09fc0b6481.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="pull-right hidden-xs" style="padding:15px">
                <span style="color:white">HOLA, @Session["Nombres"]</span>
                <span style="color:white"> | </span>
                @Html.ActionLink("CERRAR SESSIÓN", "Index", "Login", new { area = "" }, new { @class = "active" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="menu">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "active" })</li>
                    @if (Session["perfil"].Equals("Administrador"))
                    {
                        <li>@Html.ActionLink("Control Usuarios", "Index", "Usuario", new { area = "" }, new { @class = "active" })</li>
                        <li>@Html.ActionLink("Historial Asistencia", "Index", "Asistencia", new { area = "" }, new { @class = "active" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>